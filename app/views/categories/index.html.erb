<p id="notice"><%= notice %></p>

<h1 align="center">Categories</h1>

<!-- <h1 style="margin-left: .1em;">List of Categories</h1> -->

<div class="media">
  <div class="media-right">
    <table class="table table-hover">
  <thead>
    <tr>
      <th>Main</th>
      <th>Sub</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.main %></td>
        <td><%= category.sub %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', category, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

  <div class="control-group">
      <div class="controls">
      <%= link_to 'New Category', new_category_path, class: 'btn btn-default' %>
      <%= link_to 'Back to Transactions', transactions_path, class: 'btn btn-default' %>
      </div>
    </div>

